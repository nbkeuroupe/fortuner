# Production# M0/M1 Card Terminal - Environment Variables Template
# ===================================================
# Copy this file to .env and fill in your production values

# Flask Configuration
SECRET_KEY=your-super-secret-production-key-change-me
FLASK_ENV=production
PORT=5000

# Terminal Authentication (CHANGE IN PRODUCTION)
TERMINAL_USERNAME=blackrock
TERMINAL_PASSWORD=terminal123

# Transaction Configuration
MAX_TRANSACTION_AMOUNT=10000000.00
CONVERSION_FEE_PERCENT=2.5

# PRODUCTION BLOCKCHAIN WALLETS (MAINNET)
# =======================================
TRON_MERCHANT_WALLET=your-tron-mainnet-wallet-address
ETH_MERCHANT_WALLET=your-ethereum-mainnet-wallet-address
TRON_PRIVATE_KEY=your-tron-mainnet-private-key
ETH_PRIVATE_KEY=your-ethereum-mainnet-private-key
INFURA_PROJECT_ID=your-infura-project-id

# TESTNET BLOCKCHAIN WALLETS (DEVELOPMENT)
# ========================================
TEST_TRON_PRIVATE_KEY=your-tron-testnet-private-key
TEST_ETH_PRIVATE_KEY=your-ethereum-testnet-private-key

# ISO8583 Configuration (M0/M1 Card Networks)
# ===========================================
ISO8583_HOST=your-m0-m1-card-issuer-host
ISO8583_PORT=8583
ISO8583_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Security Settings
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# Logging
# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/payment_terminal.log
MAX_LOG_SIZE=10485760
LOG_BACKUP_COUNT=5

# Monitoring & Alerts
WEBHOOK_URL=your-monitoring-webhook-url
ALERT_EMAIL=admin@yourcompany.com

# Transaction Limits (High-Value M0/M1 Cards)
MIN_TRANSACTION_AMOUNT=0.01
MAX_TRANSACTION_AMOUNT=10000000.00
DAILY_TRANSACTION_LIMIT=100000000.00
MAX_TRANSACTION_AMOUNT_EUR=10000000.00

# Conversion Rates (M0/M1 to USDT)
M0_TO_USDT_RATE=1.0
M1_TO_USDT_RATE=1.0
CONVERSION_FEE_PERCENT=2.5
