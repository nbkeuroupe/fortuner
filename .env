# Production# M0/M1 Card Terminal - Environment Variables Template
# ===================================================
# Copy this file to .env and fill in your production values

# -------------------------
# Flask App
# -------------------------
SECRET_KEY=your-secret-key
FLASK_ENV=production
PORT=5000

# -------------------------
# Terminal Auth
# -------------------------
TERMINAL_USERNAME=blackrock
TERMINAL_PASSWORD=terminal123

# -------------------------
# ISO8583 Config
# -------------------------
ISO8583_HOST=127.0.0.1
ISO8583_PORT=8583
ISO8583_TIMEOUT=30

# -------------------------
# Blockchain Network Settings
# Options: mainnet / testnet
# -------------------------
TRON_NETWORK=mainnet
ETH_NETWORK=mainnet

# -------------------------
# Tron Wallets
# -------------------------
TRON_MERCHANT_WALLET=TXabc123456...
TRON_PRIVATE_KEY=your-mainnet-private-key
TEST_TRON_PRIVATE_KEY=your-testnet-private-key

# -------------------------
# Ethereum Wallets
# -------------------------
ETH_MERCHANT_WALLET=0xabc123...
ETH_PRIVATE_KEY=your-mainnet-private-key
TEST_ETH_PRIVATE_KEY=your-testnet-private-key
INFURA_PROJECT_ID=your-infura-project-id

# -------------------------
# Transaction Settings
# -------------------------
MAX_TRANSACTION_AMOUNT=10000000.00
MIN_TRANSACTION_AMOUNT=0.01
DAILY_TRANSACTION_LIMIT=100000000.00
CONVERSION_FEE_PERCENT=2.5
M0_TO_USDT_RATE=1.0
M1_TO_USDT_RATE=1.0

# -------------------------
# Rate Limiting
# -------------------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# -------------------------
# Security Settings
# -------------------------
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# -------------------------
# Logging
# -------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/payment_terminal.log
MAX_LOG_SIZE=10485760
LOG_BACKUP_COUNT=5

# -------------------------
# Monitoring
# -------------------------
WEBHOOK_URL=https://your-alert-webhook
ALERT_EMAIL=admin@yourcompany.com
